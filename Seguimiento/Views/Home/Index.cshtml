@model IEnumerable<Seguimiento.Models.Producto>

<body>

<div class="d-flex justify-content-between">

    <div class="p-3 bd-highlight" >
        <select style="width:13rem;" class="form-select form-control-md">

            <option  selected>Login</option>

            @foreach (var e in ViewBag.emp)
            {
                <option value="@e.legajo">@e.nombre @e.apellido</option>
            }
        </select>
    </div>

    <div class="p-3 bd-highlight">
        <h1 class="display-6 titulo" style="color:lightseagreen "> Administrador de Envios</h1>
    </div>
</div>

<div>
    <div class="row ">
        @*CARRITO*@
        <div class="col-lg-3">
            <div>
                <div class="d-flex flex-row bd-highlight mb-3">
                    @*
                    <div class="p-2 bd-highlight">
                        <img src="./imagenes/basket.png" class="img-thumbnail" alt="Carrito" />
                    </div>*@
                    @*
                    <div class="p-2 bd-highlight">
                        <h2 style="padding-top: 2.8rem;">Carrito</h2>
                    </div>
                    *@
                </div>
                <hr />
                <br />
                <table>
                    @*ACA DESPLIEGUE*@
                    <tbody id="carrito">
                        @if (ViewBag.carr != null)
                        {
                            foreach (var prod in ViewBag.carr)
                            {
                                <tr>
                                    <td class="align-middle">
                                        @prod.nombre
                                    </td>
                                    <td style="padding-left: 1rem;" class="align-middle">
                                        @prod.precio
                                    </td>
                                    <td style="padding-left: 1.5rem;" class="align-middle">
                                        @prod.talle
                                    </td>
                                </tr>

                            }
                        }
                    </tbody>
                </table>
                <hr />
            </div>
        </div>

        @*TABLA*@
        <div class="col-sm-9">
            <table class="table">
                <thead>
                    <tr>
                        <th class="celdas">
                            @Html.DisplayNameFor(model => model.imagen).ToUpper()
                        </th>
                        <th class="celdas">
                            @Html.DisplayNameFor(model => model.nombre).ToUpper()
                        </th>
                        <th class="celdas">
                            @Html.DisplayNameFor(model => model.precio).ToUpper()
                        </th>
                        <th class="celdas">
                            @Html.DisplayNameFor(model => model.talle).ToUpper()
                        </th>
                        <th>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @using (Html.BeginForm("create", "Carritos"))
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img style="width: 7rem; height:auto;" class="img-thumbnail" src="@Html.DisplayFor(modelItem => item.imagen)" alt="img" />
                                </td>
                                <td class="align-middle">
                                    @Html.DisplayFor(modelItem => item.nombre)
                                </td>
                                <td class="align-middle">
                                    @Html.DisplayFor(modelItem => item.precio)
                                </td>
                                <td class="align-middle">
                                    @Html.DisplayFor(modelItem => item.talle)
                                </td>
                                <td class="align-middle">
                                    <button type="submit" name="boton" value= @item asp-controller="Carritos" asp-action="agregarProductos" asp-route-producto="@item">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="green" class="bi bi-plus-square-fill" viewBox="0 0 16 16">
                                            <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm6.5 4.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3a.5.5 0 0 1 1 0z" />
                                        </svg>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
</body>

    @*{
            void agregarProducto( Producto p )
            {
                ViewBag.carr.add(p);
            }
        }*@
