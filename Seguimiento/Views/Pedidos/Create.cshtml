@model Seguimiento.Models.Pedido

@{
    ViewData["Title"] = "Create";
}
@*
<h4 class=" = titulos_creacion">Crear el envio</h4>

<hr />
*@

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="total" class="control-label, celdas"></label>
                <input asp-for="total" class="form-control" />
                <span asp-validation-for="total" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="comentarios" class="control-label, celdas"></label>
                <input asp-for="comentarios" class="form-control" />
                <span asp-validation-for="comentarios" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="empleadoId" class="control-label, celdas"></label>
                <input asp-for="empleadoId" class="form-control" />
                <span asp-validation-for="empleadoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fechaEnvio" class="control-label, celdas"></label>
                <input asp-for="fechaEnvio" class="form-control" />
                <span asp-validation-for="fechaEnvio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fechaInicio" class="control-label, celdas"></label>
                <input asp-for="fechaInicio" class="form-control" />
                <span asp-validation-for="fechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="estado" class="control-label, celdas"></label>
                <select asp-for="estado" class="form-control">
                    <option value'0'>PENDIENTE</option>
                    <option value'1'>PREPARADO_YA_PAGO</option>
                    <option value'2'>PREPARADO_NO_PAGO</option>
                    <option value'3'>ENVIADO</option>
                    <option value'4'>RECIBIDO</option>
                </select>
                <span asp-validation-for="estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">CREAR</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a class="boton-link" asp-action="Index">Volver al listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
